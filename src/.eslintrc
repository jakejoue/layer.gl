{
  "root": true,
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "no-undef": "error",
    "no-unused-vars": "warn"
  },
  "globals": {
    "mapboxgl": "readonly",
    "THREE": "readonly"
  }
}
